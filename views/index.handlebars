<h1 id="header">Route 66 Digital Burger And Bar</h1>





<img id="main-image" src="/assets/images/burger-image.png" alt="">


<div id="left-side-list" class="burgerblock">

<ul class="burgerlist" >
    {{#each burgers}}
    {{#unless this.devoured}}

    <li>

        <p class="burger-description">
            {{this.id}}. {{this.burger_name}}
        </p>
        <button data-burgerId="{{this.id}}" class="eatBurgerButton">Chomp Chomp</button>

    </li>
    {{/unless}}
    {{/each}}
</ul>

</div>

<div class="burgerblock">


<ul class="burgerlist">
    {{#each burgers}}
    {{#if this.devoured}}

    <li>

        <p class="burger-description">
            {{this.id}}. {{this.burger_name}}
        </p>

    </li>
    {{/if}}
    {{/each}}

</ul>

</div>


<textarea id="enter-burger" placeholder="Can I take your order please?" name="burgerentry" id="" cols="30" rows="10"></textarea>
<button id="submit-button" type="submit">Submit</button>
<p id="prompt-box">Enter the name of the burger you'd like to eat, then click Submit!</p>


